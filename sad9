<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Password Strength Checker</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #fffbfb;
      color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .container {
      background: #1e1e1e;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0,0,0,0.3);
      width: 300px;
      text-align: center;
    }

    input {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border: none;
      border-radius: 5px;
      outline: none;
      font-size: 16px;
    }

    #strength {
      height: 10px;
      border-radius: 5px;
      margin-top: 5px;
      transition: 0.3s;
    }

    .weak { background: red; width: 25%; }
    .medium { background: orange; width: 50%; }
    .strong { background: yellow; width: 75%; }
    .very-strong { background: green; width: 100%; }

    p {
      margin-top: 10px;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Password Strength Checker</h2>
    <input type="password" id="password" placeholder="Enter password" />
    <div id="strength"></div>
    <p id="feedback"></p>
  </div>

  <script>
    const password = document.getElementById('password');
    const strengthBar = document.getElementById('strength');
    const feedback = document.getElementById('feedback');

    password.addEventListener('input', () => {
      const val = password.value;
      let strength = 0;

      if (val.length >= 8) strength++;
      if (/[A-Z]/.test(val)) strength++;
      if (/[a-z]/.test(val)) strength++;
      if (/[0-9]/.test(val)) strength++;
      if (/[^A-Za-z0-9]/.test(val)) strength++;

      switch (strength) {
        case 0:
          strengthBar.className = '';
          feedback.textContent = '';
          break;
        case 1:
          strengthBar.className = 'weak';
          feedback.textContent = 'Weak';
          break;
        case 2:
          strengthBar.className = 'medium';
          feedback.textContent = 'Medium';
          break;
        case 3:
        case 4:
          strengthBar.className = 'strong';
          feedback.textContent = 'Strong';
          break;
        case 5:
          strengthBar.className = 'very-strong';
          feedback.textContent = 'Very Strong';
          break;
      }
    });
  </script>
</body>
</html>
